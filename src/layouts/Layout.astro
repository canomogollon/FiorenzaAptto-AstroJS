---
import { SEO } from "astro-seo";
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";

export interface Props {
	title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
	"/assets/opengraph.jpg",
	Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
	? title + " | " + "FIORENZA - Apartamentos"
	: "FIORENZA - Apartamentos - Calasanz Antioquia";
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/assets/fiorenzaicono.svg" />
		<link rel="icon" type="image/png" href="/assets/favicon.png" />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/assets/apple-touch-icon.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="/assets/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="/assets/favicon-16x16.png"
		/>
		<link rel="manifest" href="/assets/site.webmanifest" />
		<link
			rel="mask-icon"
			href="/assets/safari-pinned-tab.svg"
			color="#4f565d"
		/>
		<meta name="msapplication-TileColor" content="#4f565d" />
		<meta name="theme-color" content="#4f565d" />
		<meta name="author" content="ByGoTo" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			title={makeTitle}
			description="EstÃ¡ compuesto por 430 unidades (de 40 y 58 metros cuadrados), distribuidas en 3 torres de aproximadamente 25 pisos. Se caracteriza por ser un moderno conjunto residencial que mezcla lo industrial con el arte, lo que se refleja en sus zonas comunes."
			canonical={canonicalURL}
			twitter={{
				creator: "@canomogollon",
				site: "@MensulaIng",
				card: "summary_large_image",
			}}
			openGraph={{
				basic: {
					url: canonicalURL,
					type: "website",
					title: "FIORENZA - Apartamentos - Calasanz Antioquia",
					image: resolvedImageWithDomain,
				},
				optional: {
					locale: "es_CO",
				},
				image: {
					alt: "FIORENZA - Apartamentos - Calasanz Antioquia",
				},
			}}
		/>
		<!-- Google tag (gtag.js) -->
		<!-- script
			is:inline
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-K7J9PMPYTB"
		></!-script>
		<script-- is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-K7J9PMPYTB");
		</script-->
	</head>
	<body class="font-sans bg-background text-neutral-600">
		<Header />
		<slot />
		<Footer />
		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
				content-visibility: auto;
			}

			.accordion-button:not(.collapsed) {
				color: #d2c2ba;
				background-color: #4f565d;
			}

			.pse-ico {
				width: 50px;
				height: 50px;
				padding: 0;
				background-color: transparent;
				border-radius: 50%;
				box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.4);
				/* box-shadow: 2px 2px 11px rgba(0,0,0,0.7); */
				position: fixed;
				bottom: 140px;
				right: 20px;
				z-index: 10;
			}

			.pse-ico:hover {
				box-shadow: 2px 2px 11px rgba(0, 0, 0, 0.7);
			}
			.whatsapp-ico {
				fill: white;
				width: 50px;
				height: 50px;
				padding: 3px;
				background-color: #4dc247;
				border-radius: 50%;
				box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.4);
				/* box-shadow: 2px 2px 11px rgba(0,0,0,0.7); */
				position: fixed;
				bottom: 80px;
				right: 20px;
				z-index: 10;
			}

			.whatsapp-ico:hover {
				box-shadow: 2px 2px 11px rgba(0, 0, 0, 0.7);
			}
		</style>
		<script is:inline src="/assets/js/function.js"></script>
	</body>
</html>
